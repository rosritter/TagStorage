FROM chromadb/chroma

# Using SQLite as the persistence layer (default)
ENV CHROMA_API_IMPL=rest
ENV CHROMA_SERVER_HOST=0.0.0.0
ENV CHROMA_SERVER_HTTP_PORT=8000

# Directory for persistent storage
VOLUME /chroma/chroma

# Expose the port
EXPOSE 8000

# The entrypoint and cmd are already set in the base image